{% extends template('widget') %}

{% define data = {
    chartPluginName: chartPluginName,
    dataIdentifier: dataIdentifier
} %}
{% block body %}
    {% if data.chartPluginName is not empty %}
        {% widget 'ChartWidget' args [data.chartPluginName, data.dataIdentifier] only %}
        {% elsewidget 'ChartWidgetPlugin' args [data.chartPluginName, data.dataIdentifier] only %} {# @deprecated Use ChartWidget instead. #}
        {% endwidget %}
    {% endif %}
{% endblock %}
