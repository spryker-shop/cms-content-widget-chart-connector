{% extends template('widget') %}

{% define data = {
    chartPluginName: chartPluginName,
    dataIdentifier: dataIdentifier
} %}
{% block body %}
    {% if data.chartPluginName is not empty %}
        {% if widgetExists('ChartWidgetPlugin') %}
            {{ widget('ChartWidgetPlugin', data.chartPluginName, data.dataIdentifier) }} {# @deprecated Use "chart()" function instead. #}
        {% else %}
            {{ chart(data.chartPluginName, data.dataIdentifier) }}
        {% endif %}
    {% endif %}
{% endblock %}
